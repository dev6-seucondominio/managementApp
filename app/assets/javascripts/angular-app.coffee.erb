angular.module 'PersonalManagementCtr', [
  'ngResource'
  'ngRoute'
]

.config [
  '$routeProvider'
  '$locationProvider'
  ($routeProvider, $locationProvider)->
    $locationProvider.html5Mode
      enabled: true
      requireBase: false

    $routeProvider.when '/',
      title: 'Home'
      controller: 'Home::IndexCtrl'
      templateUrl: "<%= asset_path('home/index') %>"
]

.run [
  '$rootScope'
  ($rootScope)->
    $rootScope.$on '$routeChangeSuccess', (event, current, previous)->
      $rootScope.title = current.$$route.title
]

.controller 'AppCtrl', [
  '$scope'
  ($s)->
    console.info 'Welcome! -> Management App'
]
