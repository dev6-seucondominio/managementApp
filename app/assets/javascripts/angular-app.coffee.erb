angular.module 'PersonalManagementCtr', [
  'ngResource'
  'ngRoute'
]

.config [
  '$routeProvider'
  '$locationProvider'
  ($routeProvider, $locationProvider)->

    $locationProvider.html5Mode
      enabled: true
      requireBase: false

    $routeProvider.when '/',
      templateUrl: "<%= asset_path('home/index.html') %>"
      controller: 'Home::IndexCtrl'
]

.controller 'AppCtrl', [
  '$scope'
  ($s)->
    console.info 'Welcome! -> Management App'
]
